---
interface Props {
	image?: string;
	text: string;
}
const { text, image } = Astro.props as Props;
import Display from "./Display.astro";
---

<Display image={image}>
	<h1
		slot="text"
		class="text-white/50 text-2xl sm:text-6xl md:text-8xl lg:text-[196px] leading-tight uppercase font-bold font-primary overflow-clip"
	>
		{text}
	</h1>
	<slot name="background" slot="background" />
</Display>
